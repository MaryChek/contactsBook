<resources>

    <style name="Theme.Ft_hangouts" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/controlNormal</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnSecondary">@color/colorSecondary</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:popupBackground">@color/colorPrimary</item>
    </style>

    <style name="Theme.Ft_hangouts.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:popupBackground">@color/colorPrimary</item>
    </style>

    <style name="AppBar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">@color/controlNormal</item>
        <item name="android:textColorPrimary">@color/appBarTextColor</item>
        <item name="android:popupBackground">@color/colorPrimary</item>
    </style>

    <style name="PopupMenuStyle" parent="Theme.AppCompat.DayNight">
        <item name="android:textColor">@color/colorSecondary</item>
    </style>

    <style name="TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorTextName</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowColor">@color/colorTextShadow</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">1</item>
    </style>

    <style name="TextView.HeadName" parent="TitleTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:lineSpacingExtra">15dp</item>
    </style>

    <style name="TextView.Normal" parent="TitleTextStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">15dp</item>
    </style>

    <style name="TextView.Normal.Names" parent="TextView.Normal">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TextView.Normal.Message" parent="TextView.Normal">
        <item name="android:lineSpacingExtra">5dp</item>
    </style>
</resources>